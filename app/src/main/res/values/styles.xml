<resources>

    <style name="Widget.Theme.AndroidHerexamen.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="h1">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="p">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="buttons">
        <item name="font">@font/roboto_bold</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
